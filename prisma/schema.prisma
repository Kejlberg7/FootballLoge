// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Member {
  id                 Int                  @id @default(autoincrement())
  name               String
  FootballTeamMember FootballTeamMember[]
  Payments           Payment[]
  Fee                Fee[]
}

model FootballTeam {
  id                 Int                  @id @default(autoincrement())
  name               String
  FootballTeamMember FootballTeamMember[]
  awayMatch          Match[]              @relation("awayMatch")
  homeMatch          Match[]              @relation("homeMatch")
}

model FootballTeamMember {
  id             Int          @id @default(autoincrement())
  footballTeam   FootballTeam @relation(fields: [footballTeamId], references: [id])
  footballTeamId Int
  member         Member       @relation(fields: [memberId], references: [id])
  memberId       Int
}

model Match {
  id                 Int          @id @default(autoincrement())
  footballTeamHome   FootballTeam @relation("homeMatch", fields: [footballTeamHomeId], references: [id])
  footballTeamHomeId Int
  footballTeamAway   FootballTeam @relation("awayMatch", fields: [footballTeamAwayId], references: [id])
  footballTeamAwayId Int
  date               DateTime
  score              String
}

model Fee {
  id          Int      @id @default(autoincrement())
  date        DateTime
  amount      Int
  description String
  member      Member   @relation(fields: [memberId], references: [id])
  memberId    Int
}

model Payment {
  id          Int      @id @default(autoincrement())
  date        DateTime
  amount      Int
  description String
  member      Member   @relation(fields: [memberId], references: [id])
  memberId    Int
}
